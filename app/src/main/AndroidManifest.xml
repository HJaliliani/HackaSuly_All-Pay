<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="ir.hamplus.nac_bottom_navigation">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name="ir.hamplus.nac_bottom_navigation.view.activity.ActivityLoginPagesNavHost"
                android:label="@string/title_activity_login_pages_nav_host"
                android:launchMode="standard"
                android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
            <nav-graph android:value="@navigation/navigation_login_pages"/>
        </activity>

        <activity
                android:name="ir.hamplus.nac_bottom_navigation.view.activity.MainActivity"
                android:launchMode="standard"
                android:label="@string/app_name">
            <nav-graph android:value="@navigation/navigation_main"/>
        </activity>
    </application>

</manifest>